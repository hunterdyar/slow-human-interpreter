<html>
<head>
    <style>
        .instruction-container{
            display: grid;
            grid-template-columns: 5in 5in;
            grid-column-gap: .2in;
            grid-row-gap: .2in;
        }
        .instruction{
            position: relative;
            display: block;
            border: 3px solid black;
            width: 5in;
            height: 3in;
        }
        .instruction-number{
            position: absolute;
            right:.25in;
            top:0;
            font-size: 72pt;
            color: dimgrey;
        }
        .routine-name{
            position: absolute;
            left: .1in;
            bottom: .1in;
            font-size: 10pt;
            color: lightgray;
        }
        .instruction-argument{
            text-align: center;
            font-size: 20pt;
            color: forestgreen;
        }
        .instruction-name{
            text-align: center;
            font-size: 28pt
        }
        .instruction-details .argument{
            color: forestgreen;
        }
        .instruction-details .stack{
            color: darkblue;
        }
        .instruction-argument h1,h2,h3,h4,h5,h6{
            margin-top: .1in;
            margin-bottom: 0;
        }
        .page{page-break-after: always}

</style>
    </head>
<body>
    {{# routines}}
        <div class="page">
        <h1 class="routine-start">{{name}}</h1>
        <div class="instruction-container">

        {{# instructions }}
                <div class="instruction">
                    <div class="instruction-number">{{number}}</div>
                    <h2 class="instruction-name">{{name}}</h2>
                    {{#argument}}
                    <div class="instruction-argument">
                        <h3>{{{.}}}</h3>
                    </div>
                    {{/argument}}
                    <div class="instruction-details">
                        <ol>
                            {{#details}}
                            <li>{{{.}}}
                            {{/details}}
                        </ol>
                    </div>
                    <div class="routine-name">
                        {{routine}}
                    </div>
                </div>
        {{/instructions}}
        </div>
        </div>

    {{/routines}}



</body>
</html>
